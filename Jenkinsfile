pipeline {
    agent any
    
    stages {
        stage('build') {
            steps {
                sh 'echo "build application.."'
            }
        }

        stage('test') {
            steps {
                sh 'echo "test the application..."'
            }
        }

        stage('deploy') {
            steps {
                sh 'echo "deploy the application..."'
            }
        }
    }
}
